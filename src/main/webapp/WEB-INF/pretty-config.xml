<pretty-config xmlns="http://ocpsoft.com/prettyfaces/3.2.1"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://ocpsoft.com/prettyfaces/3.2.1
http://ocpsoft.com/xml/ns/prettyfaces/ocpsoft-pretty-faces-3.2.1.xsd">

   <url-mapping id="home">
      <pattern value="/" />
      <view-id value="/faces/index.xhtml" />
      <action onPostback="false">#{bootstrap.loadView}</action>
      <action onPostback="false">#{bootstrap.loadTemplate}</action>
   </url-mapping>
   
   <url-mapping id="program">
       <pattern value="/program/#{bootstrap.program}" />
       <view-id value="/faces/index.xhtml" />
       <action onPostback="true">#{bootstrap.loadView}</action>
       <action onPostback="true">#{bootstrap.loadTemplate}</action>
   </url-mapping>
   
   <!--<rewrite inbound="true" match="/(\w+)" substitute="faces/$1" />-->

</pretty-config>
